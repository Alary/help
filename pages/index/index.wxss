
.bz{
  padding: 30rpx;
  box-shadow: 0 0 10rpx 6rpx rgba(0, 0, 0, 0.07);
  border-radius: 10rpx;
  margin-top: 80rpx
}
.avatar{
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
  overflow: hidden;
  margin: auto;
  position: relative;
  top: -100rpx;
  border: 6rpx solid #FFCC66
}
.btns{
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 100rpx;
  background: linear-gradient(to top right, #FF9933 0%,#FF6666 100%);
  margin-top: 80rpx;
}
.btns:active{
  background: linear-gradient(to top right, rgba(255, 153, 51, 0.8) 0%,rgba(255, 102, 102, 0.8) 100%);
}
