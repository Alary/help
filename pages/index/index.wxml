<view class='pa-l40 pa-r40' >
  <view class='pa-30 bg-m panel-between item-center ra-10' data-path='/pages/area/area' bindtap='navTo'>
    <view class='panel-start item-center'>
      <image src='/img/l.png' class='icon-35'></image>
      <view class='fo-28 fo-w ma-l20'>{{area.name}}</view>
    </view>
    <image src='/img/cn.png' class='icon-30'></image>
  </view>
</view>

<view class='pa-40 panel-between wrap' style='padding-bottom:0'>
  <view wx:for="{{list}}" class='items panel-center item-center wrap' data-path="{{item.page}}" bindtap='navTo'>
    <view class='text-center'>
      <view class='cri panel-center item-center' style='background:{{item.color}}'>
        <image src='{{item.icon}}' class='icon-40'></image>
      </view>
      <view class=' fo-30 text-center ma-t20'>{{item.label}}</view>
    </view>
  </view>
</view>