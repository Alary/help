
<view class='pa-30'>

  <view class='bz'>
    <view style='height:60rpx'>
      <view class="avatar">
        <open-data type="userAvatarUrl" mode="aspectFill"></open-data>
      </view>
    </view>
    <form bindsubmit="formSubmit" report-submit="true">
      <view class='fo-28 ma-t10 bold'>帮助内容(必填):</view>
      <view class='border pa-20 ma-t20'>
        <textarea class='fo-28' name='des' value='{{des}}' style='height:200rpx' placeholder='请输入详细的帮助信息'></textarea>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 ' wx:if="{{config.qi}}">
        <view class='fo-28 bold'>取货地点(必填):</view>
        <input class='text-right fo-28'  name='qi' value="{{phone}}" placeholder='输入取货地点'></input>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10 '>
        <view class='fo-28 bold'>目的地(必填):</view>
        <input class='text-right fo-28'  name='mu' value="{{phone}}" placeholder='输入帮助地点'></input>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10'>
        <view class='fo-28 bold'>赏金(必填):</view>
        <input class='text-right fo-28' type='number' name='price' value="{{price}}" placeholder='输入金额(元)'></input>
      </view>
      <!-- <picker range='{{limit}}'>
        <view class='panel-between item-center border-b pa-t30 pa-b30 '>
